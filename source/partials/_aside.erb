<aside>
  <ul>
    <li><h2>Recent Posts</h2></li>
    <% blog.articles[0...10].each do |article| %>
      <li><%= link_to article.title, article %> <span class="small-date"><%= article.date.strftime('%b %e') %></span></li>
    <% end %>
  </ul>
  <ul>
    <li><h2>Tags</h2></li>
    <% blog.tags.each do |tag, articles| %>
      <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
    <% end %>
  </ul>
  <ul>
    <li><h2>Archives</h2></li>
    <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
      <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
    <% end %>
  </ul>
  <p class="feed">Subscribe to the <a href="/feed.xml" target="_blank">feed</a></p>
</aside>